fallback = 'Helvetica'\, Arial\, sans-serif

typography = {
  headings:   'Fira Sans'\, fallback
  body: 'Roboto'\, fallback
  monospace: Consolas\, Monaco\, 'Andale Mono'\, 'Ubuntu Mono'\, monospace
}

blockquote
  margin 0
  text-align left

p
  text-align left

  &.description
    font-style italic

p
h1
h2
h3
h4
h5
h6
  margin-top 20px
  font-family: typography.headings

h1
  font-size 24px
  line-height 24px
  font-weight 500

  +desktop()
    font-size 36px
    line-height 36px

h2
  font-weight 500
  font-size 18px
  line-height 20px

  +desktop()
    font-size 24px
    line-height 28px

h3
  font-size 16px
  line-height 20px
  font-weight 600

  +desktop()
    font-size 20px
    line-height 24px

h4
  font-size 16px
  line-height 20px
  font-weight 600

h5
  font-size 14px
  line-height 20px
  font-weight 700

h6
  font-size 11px
  line-height 14px
  text-transform uppercase
  font-weight 600

.postbox
  p
  h1
  h2
  h3
  h4
  h5
  h6
    margin-top 0
