.postbox
.stuffbox
  max-width 360px

  .hndle
    cursor move
    display: block
    margin-bottom: 0
    padding: 10px

    &:hover
      padding-left 32px

    > span
      cursor pointer
      transition: border-color .15s linear, color .1s linear, opacity .2s ease-in-out

  &.closed
    .hndle
      border-radius 10px

  .inside
    position: relative
    display: block
    padding: 20px
    transform: translate(0px, 0px), scale(1, 1)
    transition: transform .3s ease-in-out, opacity .3s ease-in-out, visibility 0s

    hr
      display none

body
  &.content
    &-b
      .postbox
      .stuffbox
        .hndle
          border-bottom: 1px solid rgba(black, .05)

    &-w
      .postbox
      .stuffbox
        .hndle
          border-bottom: 1px solid rgba(whitee, .1)
