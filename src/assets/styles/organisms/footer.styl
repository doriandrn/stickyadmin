mS = wrapC.marginsLR
pad = 10px

#wpfooter
  text-align: center
  z-index: 3
  position: fixed auto 0 0 0
  display: block!important
  padding: pad mS.mobile

  +above(l)
    padding: pad mS.tablet

  +desktop()
    padding: pad mS.desktop

  +hd()
    padding: pad mS.hd

  p
    font-size: 12px
    line-height: 14px
    margin 0
    font-weight: 400
    font-style italic

    &#footer-left
      font-style normal

body.footer-b #wpfooter,
body.footer-b #wpfooter p
  color: rgba(0,0,0,.6)
body.footer-w #wpfooter,
body.footer-w #wpfooter p
  color: rgba(255,255,255,.6)
