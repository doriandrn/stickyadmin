html
  text-size-adjust 100%

html
body
  margin 0
  padding 0
  height 100%

body
  -webkit-font-smoothing: antialiased;
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  cursor: default;
  font-size 14px
  line-height 16px

*
*:before
*:after
  margin 0
  box-sizing border-box

input
select
textarea
  outline none
  margin 0

select
  appearance none

button
  outline none
  box-shadow none
  border none

a
button
  cursor pointer

blockquote
  margin 0
  text-align left

p
  margin-top 0
  text-align left

dd
li
  margin-bottom 8px

  &:last-child
    margin-bottom 0
